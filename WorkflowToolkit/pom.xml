<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.astoolkit</groupId>
	<artifactId>WorkflowToolkit</artifactId>
	<version>0.0.0-SNAPSHOT</version>
	<name>Workflow Toolkit</name>
	<packaging>swc</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>org.sonatype.flexmojos</groupId>
				<artifactId>flexmojos-maven-plugin</artifactId>
				<version>3.8</version>
				<extensions>true</extensions>
				<configuration>
					<includeAsClasses>
						<sources>
							<directory>${basedir}/src/main/flex</directory>
							<excludes>
								<exclude>**/includes/*.as</exclude>
	      					</excludes>
      					</sources>
					</includeAsClasses>
					<namespaces>
						<namespace>
							<uri>http://www.astoolkit.org/ns/2012/wfml</uri>
							<manifest>${basedir}/ns-manifest.xml</manifest>
						</namespace>
					</namespaces>
					<includeNamespaces>
						<namespace>http://www.astoolkit.org/ns/2012/wfml</namespace>
					</includeNamespaces>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<parent>
		<artifactId>astoolkit</artifactId>
		<groupId>org.astoolkit</groupId>
		<version>0.0.0-SNAPSHOT</version>
	</parent>
	<dependencies>
		<dependency>
			<artifactId>ASToolkitCommons</artifactId>
			<groupId>org.astoolkit</groupId>
			<version>0.0.0-SNAPSHOT</version>
			<type>swc</type>
		</dependency>
	</dependencies>
</project>
